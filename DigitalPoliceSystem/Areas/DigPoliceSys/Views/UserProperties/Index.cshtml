@model IEnumerable<DigitalPoliceSystem.Models.UserProperty>

@{
    ViewData["Title"] = "Index";
}
<br/>
<h1>All User who are completely registered</h1>

<p>
    @*<a asp-action="Create">Create New</a>*@
    <br/>
    
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserPropertyEmailId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserPropertyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserPropertyPhoneNumer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserPropertyAddress)
            </th>
            <th>
                Number of Complaints Filed
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserPropertyEmailId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserPropertyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserPropertyPhoneNumer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserPropertyAddress)
            </td>
            <td>
                @item.Complaints.Count()
            </td>
            <td>
                <a asp-area="DigPoliceSys" asp-controller="Complaints" asp-action="GetComplaintsOfUserAdmin" asp-route-filterUserPropertyId="@item.UserPropertyId">View all Complaints</a>
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.UserPropertyId">Edit</a> |*@
                <a asp-action="DetailsAdmin" asp-route-id="@item.UserPropertyId">Detailed View</a> 
                @*|<a asp-action="Delete" asp-route-id="@item.UserPropertyId">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
