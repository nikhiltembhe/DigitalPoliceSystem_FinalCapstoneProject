@model IEnumerable<DigitalPoliceSystem.Models.ComplaintCategory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompliantCategoryName)
            </th>
            <th>
                Number of Complaints
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompliantCategoryName)
            </td>
            <td>
                @item.Complaints.Count()
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ComplaintCategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ComplaintCategoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ComplaintCategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
